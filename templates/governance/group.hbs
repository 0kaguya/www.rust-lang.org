{{#*inline "page"}}

<header>
  <div class="container">
    <h1>{{ data.info[0].name }}</h1>
  </div>
</header>

<section id="team-info" class="purple">
  <div class="container">
    <p><strong>{{ data.info[0].description }}</strong></p>
    <p><strong>Chat Channel</strong>: {{ data.info[0].chat }}</p>
    <div class="row">
      <h2>Members</h2>
      {{#each data.info[0].leads as |lead| ~}}
        <div class="two columns group-lead group-member">
          <p class="name">{{lead}} (Lead)</p>
          <img src="https://avatars.githubusercontent.com/{{lead}}" />
        </div>
      {{/each~}}
      {{#each data.info[0].members as |member|}}
        <div class="two columns group-member">
          <p class="name">{{member}}</p>
          <img src="https://avatars.githubusercontent.com/{{member}}" />
        </div>
      {{/each~}}
    </div>
  </div>
</section>

{{#if data.subteams ~}}
<section id="subteams" class="green">
  <div class="container">
    <header>
      <h2>Subteams</h2>
      <div class="highlight"></div>
    </header>
    <div id="teams">
      {{#each data.subteams as |st| ~}}
        <div class="subteam">
          <h3>{{st.name~}}</h3>
          <div id="{{st.name}}-info">
            <p><strong>{{ st.description }}</strong></p>
            <p><strong>Chat Channel</strong>: {{ st.chat }}</p>
          </div>
          <div id="{{st.name}}-members">
            {{#each st.leads as |lead|}}
              <div class="two columns group-member">
                <p class="name">{{lead}} (Lead)</p>
                <img src="https://avatars.githubusercontent.com/{{lead}}" />
              </div>
            {{/each~}}
            {{#each st.members as |member|}}
              <div class="two columns group-member">
                <p class="name">{{member}}</p>
                <img src="https://avatars.githubusercontent.com/{{member}}" />
              </div>
            {{/each~}}
          </div>
        </div>
      {{/each~}}
    </div>
  </div>
</section>
{{/if ~}}

